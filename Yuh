-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Configuration
local HITBOX_SCALE = 2 -- Scale factor to increase the hitbox size

-- Local player
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- Function to scale character hitbox
local function scaleHitbox(scale)
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if humanoidRootPart then
        -- Scale HumanoidRootPart
        humanoidRootPart.Size = humanoidRootPart.Size * scale
        humanoidRootPart.CFrame = humanoidRootPart.CFrame * CFrame.new(0, 0, 0) -- Reset position to avoid shift
        
        -- Scale other body parts
        for _, part in pairs(character:GetChildren()) do
            if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
                part.Size = part.Size * scale
                part.CFrame = part.CFrame * CFrame.new(0, 0, 0) -- Reset position to avoid shift
            end
        end
    end
end

-- Apply hitbox scaling
scaleHitbox(HITBOX_SCALE)

-- Handle character respawn
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    -- Apply hitbox scaling to the new character
    scaleHitbox(HITBOX_SCALE)
end)
